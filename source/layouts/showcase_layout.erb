<% wrap_layout :layout do %>
  <div class="header-content-wrapper">
    <p class="header-content"><%= current_page.data.year %></p>
    <h1 class="title"><%= current_page.data.title %></h1>
    <p class="header-content"><%= current_page.data.description %></p>
  </div>

  <%= yield %>

  <h2>Data sources</h2>
  <ul>
    <% current_page.data.data_sources.each do |data_source| %>
    <li>
      <a href="<%= blog.articles.select {|a| a.data[:title] == data_source }.first.url %>">
        <%= data_source %>
      </a>
    </li>
    <% end %>
  </ul>
<% end %>
